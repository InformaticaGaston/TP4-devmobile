<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/myFirstEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:hint="search"
        android:paddingStart="18dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/firstTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello mr xx"
        app:layout_constraintTop_toBottomOf="@+id/myFirstEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/secondTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="*please enter the needed data"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/myFirstEditText"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/thirdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your request code"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/secondTextView"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/secondEditText"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:hint="enter your code"
        app:layout_constraintLeft_toRightOf="@+id/thirdTextView"
        app:layout_constraintTop_toBottomOf="@+id/secondTextView" />

    <TextView
        android:id="@+id/fourthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your new id"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/thirdTextView"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/thirdEditText"
        android:layout_width="282dp"
        android:layout_height="38dp"
        android:layout_marginLeft="40dp"
        android:hint="enter your id"
        app:layout_constraintLeft_toRightOf="@+id/fourthTextView"
        app:layout_constraintTop_toBottomOf="@+id/secondEditText" />

    <TextView
        android:id="@+id/fifthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Your PWD"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/fourthTextView"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:layout_width="281dp"
        android:layout_height="40dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="8dp"
        android:hint="********"
        app:layout_constraintLeft_toRightOf="@+id/fifthTextView"
        app:layout_constraintTop_toBottomOf="@+id/thirdEditText" />

    <Button
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_marginTop="164dp"
        android:backgroundTint="#000000"
        android:text="Confirm"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>